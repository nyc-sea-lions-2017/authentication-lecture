<% if @errors %>
	<ul>
	<% @errors.each do |error|%>
		<li><%= error %></li>
	<% end %>
	</ul>
<% end %>

<form method="post" action="/users">
	<input type="text" name="user[name]" placeholder="name">
	<input type="password" name="user[password]" placeholder="password">
	<input type="submit" name="Register">	
</form>